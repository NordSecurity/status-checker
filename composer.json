{
  "name": "nordsec/status-checker",
  "description": "A library for implementing status checks",
  "license": "MIT",
  "type": "library",
  "require": {
    "symfony/console": ">=2.0",
    "psr/http-message": "^1.0",
    "php": "^7.4 || ^8.0",
    "ext-json": "*"
  },
  "autoload": {
    "psr-4": {
      "Nordsec\\StatusChecker\\": "src/"
    }
  },
  "suggest": {
    "ext-pdo": "Needed for DatabaseChecker",
    "php-amqplib/php-amqplib": "Needed for RabbitMqChecker",
    "influxdb/influxdb-php": "Needed for InfluxDbChecker",
    "predis/predis": "Needed for RedisChecker"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.7",
    "phpunit/phpunit": "^9.5"
  }
}
